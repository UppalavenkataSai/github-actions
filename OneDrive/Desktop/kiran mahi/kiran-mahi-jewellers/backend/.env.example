# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# RDS PostgreSQL Configuration
DB_HOST=your-rds-endpoint.rds.amazonaws.com
DB_PORT=5432
DB_NAME=kiran_mahi_db
DB_USER=postgres
DB_PASSWORD=your-secure-password

# RDS Replica (optional)
DB_REPLICA_HOST=your-rds-replica-endpoint.rds.amazonaws.com

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRY=7d

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# ECR Configuration
AWS_ECR_REGISTRY=your-account-id.dkr.ecr.us-east-1.amazonaws.com
ECR_REPOSITORY_NAME=kiran-mahi-jewellers-backend

# DynamoDB Configuration
DYNAMODB_REGION=us-east-1
DYNAMODB_CACHE_TABLE=kiran-mahi-cache
DYNAMODB_SESSIONS_TABLE=kiran-mahi-sessions

# CloudFront Configuration
CLOUDFRONT_DOMAIN=d123456789.cloudfront.net

# Email Configuration (for orders)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Payment Gateway (if applicable)
PAYMENT_API_KEY=your-payment-gateway-key
PAYMENT_API_SECRET=your-payment-gateway-secret

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs
