# Terraform Variables Configuration
# Copy this file to terraform.tfvars and fill in your values

aws_region            = "us-east-1"
environment           = "production"
app_name              = "kiran-mahi-jewellers"
vpc_cidr              = "10.0.0.0/16"

# Database Configuration
db_instance_class     = "db.t3.micro"  # Change to db.t3.small for production
db_allocated_storage  = 20              # GBs
db_name               = "kiran_mahi_db"
db_master_username    = "postgres"
db_master_password    = "ChangeMe123!!"  # IMPORTANT: Change this password

# ECS Configuration
ecs_task_cpu          = 256            # CPU units
ecs_task_memory       = 512            # MB
ecs_desired_count     = 2              # Number of tasks

# Container Ports
container_port_backend  = 5000
container_port_frontend = 3000

# Domain Configuration (Required)
domain_name           = "your-domain.com"

# JWT Secret (Required)
jwt_secret            = "your-very-secure-jwt-secret-key-change-this"
